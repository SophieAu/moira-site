---
import { CV as strings } from '../strings';
import Layout from '../components/base/Layout.astro';
import { getCollection } from 'astro:content';
import WrappedContent from '../components/WrappedContent.astro';

const cv = (await getCollection('cv'))[0]!;
const { Content } = await cv.render();
---

<Layout
	title={strings.title}
	description={strings.description}
	slug={strings.slug}
	showTitle={false}
>
	<WrappedContent class="rootStyle">
		<Content />
	</WrappedContent>
</Layout>

<style>
	.rootStyle {
		> *:first-child {
			margin-top: 0;
		}
	}
</style>
