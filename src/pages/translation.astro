---
import { Translation as strings } from '../strings';
import Layout from '../components/base/Layout.astro';
import { getCollection, render } from 'astro:content';
import WrappedContent from '../components/WrappedContent.astro';

const tx = (await getCollection('translation'))[0]!;
const { Content } = await render(tx);
---

<Layout title={strings.title} description={strings.description} slug={strings.slug} showTitle>
	<WrappedContent class="contentStyle">
		<Content />
	</WrappedContent>
</Layout>
