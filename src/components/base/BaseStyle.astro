<style is:global>
	:root {
		font-size: 16px;

		--heading-font-family: 'Italiana', serif;
		--body-font-family: 'Fanwood Text', serif;

		--h1-font: normal 400 2.25rem/1.2 var(--heading-font-family);
		--h2-font: normal 400 2rem/1.2 var(--heading-font-family);
		--h3-font: normal 400 1.75rem/1.2 var(--heading-font-family);
		--h456-font: normal 700 1.5rem/1.2 var(--body-font-family);

		--nav-font: normal 400 1.25rem/1.25 var(--body-font-family);
		--body-font: normal 400 1.5rem/1.25 var(--body-font-family);

		--black: #1b1c25;
		--grey: #3d3e4a;
		--beige: #ecdbcb;

		--small-margin: 1.5rem;
		--large-margin: 4rem;

		--sidebar-width: 14rem;
		--main-width: 45rem;
		--mobile-breakpoint: 48rem;
	}

	h1 {
		font: var(--h1-font);
		letter-spacing: 0.02em;

		color: var(--black);

		margin-bottom: 2rem;
	}

	h2 {
		font: var(--h2-font);
		letter-spacing: 0.02em;

		color: var(--black);

		margin: 5rem 0 1.5rem;
	}

	h3 {
		font: var(--h3-font);
		letter-spacing: 0.02em;

		color: var(--black);
	}

	h4,
	h5,
	h6 {
		font: var(--h456-font);
		letter-spacing: 0.02em;

		color: var(--black);
	}

	/* TO BE MOVED */
	p {
		font: var(--body-font);
		letter-spacing: 0.02em;

		color: var(--black);

		margin: 1.25rem 0;
	}
	/* list spacing :16px = 1rem */
</style>
