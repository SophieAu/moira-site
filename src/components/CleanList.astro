---
interface Props {
	class?: string;
}

const { class: className, ...rest } = Astro.props;
---

<ul class={className} {...rest}>
	<slot />
</ul>
<style>
	ul {
		list-style: none;

		display: grid;
		gap: 2rem;
	}
	ul > :global(li) {
		font: var(--body-font);
		letter-spacing: 0.02em;

		color: var(--black);
	}
</style>
