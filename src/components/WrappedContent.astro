---
interface Props {
	class?: string;
}

const { class: className, ...rest } = Astro.props;
---

<div class:list={['prose', className]} {...rest}>
	<slot />
</div>

<style>
	.prose {
		font: var(--body-font);
		letter-spacing: 0.02em;
		color: var(--black);

		ul {
			list-style: disc;
			margin-left: 1.5rem;

			display: grid;
			gap: 1rem;
		}
	}
</style>
